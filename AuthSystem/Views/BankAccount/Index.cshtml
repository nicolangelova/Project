@*Summary Widgets*@
<div class="row mb-4">

    <div class="col-md-4">
        <div class="d-flex flex-row widget summary balance">
            <div class="d-flex flex-column justify-content-center p-5">
                <i class="fa-solid fa-dollar-sign fa-2xl"></i>
            </div>
            <div class="d-flex flex-column m-auto py-3">
                <span class="lead">Main Account</span>
                <h1 class="display-5 fw-bold">@ViewBag.Balance</h1>
            </div>
        </div>
    </div>


    <div class="col-md-4">
        <div class="d-flex flex-row widget summary balance">
            <div class="d-flex flex-column justify-content-center p-5">
                <i class="fa-solid fa-euro-sign fa-2xl"></i>
            </div>
            <div class="d-flex flex-column m-auto py-3">
                <span class="lead">Saving Account</span>
                <h1 class="display-5 fw-bold">@ViewBag.Savings</h1>
            </div>
        </div>
    </div>
</div>
